   keywords = {Artisanal and small-scale mining (ASM),COVID-19,Livelihoods,Sub-Saharan Africa},
   month = {3},
   pages = {105315},
   publisher = {Pergamon},
   title = {Artisanal and small-scale mining, and COVID-19 in sub-Saharan Africa: A preliminary analysis},
   volume = {139},
   year = {2021},
