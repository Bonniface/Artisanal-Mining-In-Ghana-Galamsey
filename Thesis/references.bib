   isbn = {9780323900836},
   issn = {0065308X},
   journal = {Advances in Parasitology},
   keywords = {Annual transmission potential,Blindness prevalence,Forest strain,Microfilarial prevalence,Onchocerca volvulus,Onchocerciasis,Savannah strain,Simulium damnosum s.l.,West Africa},
   month = {1},
   pages = {1-50},
   pmid = {34024357},
   publisher = {Academic Press},
   title = {Taking the strain out of onchocerciasis? A reanalysis of blindness and transmission data does not support the existence of a savannah blinding strain of onchocerciasis in West Africa},
